{
    "manifest_version": 1,
    "name": "Epoch Translator",
    "version": "1.0.0",
    "description": "Convert Unix timestamps to human-readable times and vice versa, showing both UTC and Local outputs.",
    "action": {
        "default_title": "Epoch Translator",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": ["activeTab", "scripting"],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
